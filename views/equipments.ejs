<!DOCTYPE html>
<html lang="en">

<head>
    <!-- character encoding -->
    <meta charset="utf-8">
    <!-- adaptable to screen size -->
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Rent it!</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>

<body>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous">
        </script>

    <!-- Nav Links -->
    <nav class="navbar navbar-light bg-light">
        <div class="container-fluid d-flex align-items-center">

            <ul class="nav d-flex align-items-center p-0 m-0">
                <!-- Logo/Title: Equipment Rental -->
                <span class="navbar-brand fs-3 mb-0 me-4">Equipment Rental</span>

                <li class="nav-item me-3">
                    <a class="nav-link text-secondary fw-normal p-0" href="./">Home</a>
                </li>

                <li class="nav-item">
                    <a class="nav-link text-secondary fw-bold p-0" href="./equipments">Equipments</a>
                </li>
            </ul>

        </div>
    </nav>

    <!-- Breadcrumb -->

    <nav aria-label="breadcrumb">
        <ol class="breadcrumb d-flex justify-content-between align-items-center">
            <div class="d-flex">
                <li>&nbsp;&nbsp;</li>
                <li class="breadcrumb-item"><a href="#">Equipments</a></li>
                <li class="breadcrumb-item active" aria-current="page"></li>
            </div>
            <a href="./equipment/add">
                <input class="btn btn-primary" type="button" value="Add">
            </a>

        </ol>
    </nav>

    <hr>

    <!-- Cards -->
    <div class="container-fluid">
        <div class="row">
            <% for (var equipment of equipments) { %>

                <div class="card" style="width: 18rem;">
                    <a href="./equipment/detail/<%= equipment._id %>">
                        <img src="<%= equipment.imageURL %>" class="card-img-top" alt="<%= equipment.name %>"
                            style="height: 180px; object-fit: cover;">
                    </a>

                    <div class="card-body">
                        <h5 class="card-title">
                            <%= equipment.name %>@<%= equipment.location %>
                        </h5>
                        <p class="card-text">
                            <%= equipment.description || 'No description available' %>
                        </p>
                        <a href="./equipment/edit/<%= equipment._id %>" class="btn btn-primary">Edit</a>
                    </div>

                    <div class="card-footer">
                        <small class="text-body-secondary">Last updated 3 mins ago</small>
                    </div>
                </div>
                <% }; %>
        </div>
    </div>


</body>

</html>