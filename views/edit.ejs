<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Edit Equipment</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>

<body>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous">
    </script>

    <!-- Nav Links -->
    <nav class="navbar navbar-light bg-light">
        <div class="container-fluid d-flex align-items-center">
            <ul class="nav d-flex align-items-center p-0 m-0">
                <span class="navbar-brand fs-3 mb-0 me-4">Equipment Rental</span>
                <li class="nav-item me-3">
                    <a class="nav-link text-secondary fw-normal p-0" href="/">Home</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-secondary fw-bold p-0" href="/equipments">Equipments</a>
                </li>
            </ul>
        </div>
    </nav>

    <!-- Breadcrumb -->
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb d-flex justify-content-between align-items-center">
            <div class="d-flex">
                <li>&nbsp;&nbsp;</li>
                <li class="breadcrumb-item active"><a href="/equipments">Equipments</a></li>
                <li class="breadcrumb-item active" aria-current="page">Edit</li>
            </div>
        </ol>
    </nav>

    <hr>

    <div class="container-fluid">
        <!-- forms -->
        <form action="/equipment/update/<%= equipment._id %>" method="post">
            <div class="row mb-3">
                <div class="col-md-6">
                    <label for="InputName" class="form-label">Name</label>
                    <input type="text" class="form-control" id="InputName" name="name" aria-describedby="name"
                        value="<%= equipment.name %>">
                </div>

                <div class="col-md-6">
                    <label for="location" class="form-label">Location</label>
                    <select class="form-select" aria-label="Default select example" name="location" id="location">
                        <option value="">Open this select menu</option>
                        <option value="FSC801C">FSC801C</option>
                        <option value="FSC801D">FSC801D</option>
                        <option value="FSC801E">FSC801E</option>
                        <option value="FSC901E">FSC901E</option>
                    </select>
                </div>
            </div>

            <label for="InputDescription" class="form-label">Description</label>
            <div class="form-floating">
                <textarea class="form-control" placeholder="Leave a Description here" id="InputDescription"
                    name="description" style="height: 100px"><%=equipment.description %></textarea>
                <label for="InputDescription">Description</label>
            </div>

            <br>

            <div class="row mb-3">
                <div class="col-md-6">
                    <label for="InputImageURL" class="form-label">Image URL</label>
                    <input type="url" class="form-control" id="InputImageURL" name="imageURL" aria-describedby="ImageURL"
                        value="<%=equipment.imageURL %>">
                </div>

                <div class="col-md-4">
                    <label for="ContactPerson" class="form-label">Contact Person</label>
                    <input type="text" class="form-control" id="ContactPerson" name="contactPerson" aria-describedby="ContactPerson"
                        value="<%=equipment.contactPerson %>">
                </div>

                <!-- color picker!!! -->
                <div class="col-2 my-2">
                    <label for="inputcolor3" class="form-label">Color</label>
                    <input type="color" class="form-control form-control-color" id="inputcolor3"
                        name="color" style="width:100%" value="<%=equipment.color %>">
                </div>
            </div>

            <br>

            <div class="mb-3 form-check">
                <input type="checkbox" class="form-check-input" id="Highlighted" name="highlighted">
                <label class="form-check-label" for="Highlighted">Highlighted</label>
            </div>
            
            <button type="submit" class="btn btn-primary">Update</button>
            <a href="/equipments" class="btn btn-secondary">Cancel</a>
        </form>
        
        <form action="/equipment/delete/<%=equipment._id %>" method="post" class="mt-3">
            <button type="submit" class="btn btn-danger" 
                onclick="return confirm('Are you sure you want to delete this equipment?')">
                Delete
            </button>
        </form>
    </div>

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            // 设置位置选择
            const locationSelect = document.getElementById("location");
            if (locationSelect) {
                const selectedValue = "<%= equipment.location %>";
                for (let i = 0; i < locationSelect.options.length; i++) {
                    if (locationSelect.options[i].value === selectedValue) {
                        locationSelect.options[i].selected = true;
                        break;
                    }
                }
            }
        });
    </script>
</body>

</html>