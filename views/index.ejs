<!DOCTYPE html>
<html lang="en">

<head>
  <!-- character encoding -->
  <meta charset="utf-8">
  <!-- adaptable to screen size -->
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Rent it!</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">

  <!-- FullCalendar -->
  <link href="https://cdn.jsdelivr.net/npm/fullcalendar@6.1.14/index.global.min.css" rel="stylesheet">

  <!-- 自定义样式 -->
  <link rel="stylesheet" href="/stylesheets/calendar.css">

</head>

<body>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous">
    </script>

  <!-- p-0: padding=0; m-0: margin=0 fs=3:font size字体大小=3 -->

  <!-- Nav Links -->
  <nav class="navbar navbar-light bg-light">
    <div class="container-fluid d-flex align-items-center">

      <ul class="nav d-flex align-items-center p-0 m-0">
        <!-- Logo/Title: Equipment Rental -->
        <span class="navbar-brand fs-3 mb-0 me-4">Equipment Rental</span>

        <li class="nav-item me-3">
          <a class="nav-link text-secondary fw-bold p-0" href="#">Home</a>
        </li>

        <li class="nav-item">
          <a class="nav-link text-secondary fw-normal p-0" href="./equipments">Equipments</a>
        </li>
      </ul>

    </div>
  </nav>

  <!-- Carousel -->
  <div id="carouselExample" class="carousel slide">
    <div class="carousel-inner">
      <div class="carousel-item active">
        <svg aria-label="Placeholder: First slide" class="bd-placeholder-img bd-placeholder-img-lg d-block w-100"
          height="400" preserveAspectRatio="xMidYMid slice" role="img" width="800" xmlns="http://www.w3.org/2000/svg">
          <title>Placeholder</title>
          <rect width="100%" height="100%" fill="#777"></rect><text x="50%" y="50%" fill="#555" dy=".3em">First
            slide</text>
        </svg>
      </div>
      <div class="carousel-item">
        <svg aria-label="Placeholder: Second slide" class="bd-placeholder-img bd-placeholder-img-lg d-block w-100"
          height="400" preserveAspectRatio="xMidYMid slice" role="img" width="800" xmlns="http://www.w3.org/2000/svg">
          <title>Placeholder</title>
          <rect width="100%" height="100%" fill="#666"></rect><text x="50%" y="50%" fill="#444" dy=".3em">Second
            slide</text>
        </svg>
      </div>
      <div class="carousel-item">
        <svg aria-label="Placeholder: Third slide" class="bd-placeholder-img bd-placeholder-img-lg d-block w-100"
          height="400" preserveAspectRatio="xMidYMid slice" role="img" width="800" xmlns="http://www.w3.org/2000/svg">
          <title>Placeholder</title>
          <rect width="100%" height="100%" fill="#555"></rect><text x="50%" y="50%" fill="#333" dy=".3em">Third
            slide</text>
        </svg>
      </div>
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExample" data-bs-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carouselExample" data-bs-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Next</span>
    </button>
  </div>

  <!-- Button group -->
  <br>
  <div class="btn-group mb-4" role="group" aria-label="Month Navigation">
    <button type="button" class="btn btn-outline-primary" id="prevBtn">Previous</button>
    <button type="button" class="btn btn-outline-primary active" id="monthBtn">Jul</button>
    <button type="button" class="btn btn-outline-primary" id="nextBtn">Next</button>
  </div>

  <!-- Calendar -->
  <div id="calendar"></div>

  <!-- JS -->
  <script src="https://cdn.jsdelivr.net/npm/fullcalendar@6.1.14/index.global.min.js"></script>
  <script>
    document.addEventListener('DOMContentLoaded', function () {
      const calendarEl = document.getElementById('calendar');
      const calendar = new FullCalendar.Calendar(calendarEl, {
        initialView: 'dayGridMonth',
        headerToolbar: false, // 关闭默认工具栏
        dayCellClassNames: function (arg) {
          if (arg.isToday) return ['fc-day-today'];
          if (!arg.isCurrentMonth) return ['fc-day-other'];
          return [];
        }
      });

      // 初始化月份标题
      const updateMonthTitle = () => {
        const monthNames = ['Jan', 'Feb', 'Mar', 'Apr', 'May', 'Jun', 'Jul', 'Aug', 'Sep', 'Oct', 'Nov', 'Dec'];
        const currentMonth = monthNames[calendar.getDate().getMonth()];
        document.getElementById('monthBtn').textContent = currentMonth;
      };

      // 绑定事件
      const prevBtn = document.getElementById('prevBtn');
      const nextBtn = document.getElementById('nextBtn');
      prevBtn.addEventListener('click', () => {
        calendar.prev();
        updateMonthTitle();
      });
      nextBtn.addEventListener('click', () => {
        calendar.next();
        updateMonthTitle();
      });

      // 渲染日历
      calendar.render();
      updateMonthTitle();
    });
  </script>
</body>

</html>